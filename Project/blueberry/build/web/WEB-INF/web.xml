<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    
    <filter>
        <filter-name>filter_login</filter-name>
        <filter-class>filter_login</filter-class>
    </filter>
    <filter>
        <filter-name>filter_view</filter-name>
        <filter-class>filter_view</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>filter_login</filter-name>
        <url-pattern>/loginservlet</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>filter_view</filter-name>
        <url-pattern>/loginservlet</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>shop</servlet-name>
        <servlet-class>shop</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cart</servlet-name>
        <servlet-class>cart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>shop</servlet-name>
        <url-pattern>/shopservlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cart</servlet-name>
        <url-pattern>/cartservlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/loginservlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>10</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
